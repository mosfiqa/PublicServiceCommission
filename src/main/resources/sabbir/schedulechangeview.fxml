<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: #242436;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sabbir.ScheduleChangeController">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" prefHeight="760.0" prefWidth="960.0">
            <children>
                <Label text="Schedule Change Approval (Goal 6)" textFill="WHITE">
                    <font>
                        <Font name="Cambria Math" size="30.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </Label>

                <Label text="Pending Schedule Change Requests:" textFill="#cccccc">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <TableView fx:id="pendingRequestsTable" prefHeight="200.0" prefWidth="960.0" style="-fx-background-color: #3e3e57; -fx-selection-bar: #29B6F6;">
                    <columns>
                        <TableColumn prefWidth="150.0" text="Request ID" />
                        <TableColumn prefWidth="250.0" text="Exam Event" />
                        <TableColumn prefWidth="150.0" text="Current Date" />
                        <TableColumn prefWidth="150.0" text="Proposed Date" />
                        <TableColumn prefWidth="259.0" text="Reason Category" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </TableView>

                <Label text="Justification &amp; Impact Analysis:" textFill="#cccccc">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>

                <VBox prefHeight="350.0" prefWidth="960.0" style="-fx-background-color: #3e3e57; -fx-padding: 15;">
                    <children>
                        <Label text="Selected Request: [Select a request from the table above]" fx:id="selectedRequestLabel" textFill="#29B6F6">
                            <font>
                                <Font name="Arial Bold" size="16.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </Label>
                        <TextArea fx:id="requestDetailsArea" editable="false" prefHeight="280.0" prefWidth="930.0" promptText="Detailed reason for schedule change, logistical impact, and candidate notification plan." style="-fx-control-inner-background: #191924; -fx-text-fill: #E0E0E0;" VBox.vgrow="ALWAYS">
                            <font>
                                <Font name="Arial" size="14.0" />
                            </font>
                        </TextArea>
                    </children>
                </VBox>

                <HBox alignment="TOP_RIGHT" prefHeight="50.0" prefWidth="960.0" spacing="20.0">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleRejectChange" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #FF5252;" text="REJECT REQUEST" textFill="WHITE">
                            <font>
                                <Font name="Arial Rounded MT Bold" size="18.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#handleApproveChange" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #4CAF50;" text="APPROVE CHANGE" textFill="WHITE">
                            <font>
                                <Font name="Arial Rounded MT Bold" size="18.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>