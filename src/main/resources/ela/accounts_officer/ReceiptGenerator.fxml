<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ela.accounts_officer.ReceiptGeneratorController">
    <children>
        <Label layoutX="50.0" layoutY="40.0" text="Goal 2: Receipt Generation">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>

        <Label layoutX="50.0" layoutY="90.0" text="Enter Payment Details:" />
        <TextField fx:id="txnIdField" layoutX="50.0" layoutY="120.0" promptText="Transaction ID" />
        <TextField fx:id="amountField" layoutX="220.0" layoutY="120.0" promptText="Amount" />

        <Button layoutX="390.0" layoutY="120.0" onAction="#generateReceiptOnAction" text="Preview Receipt" />

        <TextArea fx:id="receiptArea" layoutX="50.0" layoutY="160.0" prefHeight="250.0" prefWidth="699.0" />

        <Button layoutX="50.0" layoutY="430.0" onAction="#saveToTextFileOnAction" prefHeight="40.0" prefWidth="250.0" text="Save Receipt to .txt File" textFill="BLUE">
            <font><Font name="System Bold" size="14.0" /></font>
        </Button>

        <Label fx:id="statusLabel" layoutX="320.0" layoutY="440.0" text="Status: Ready" />
    </children>
</AnchorPane>
