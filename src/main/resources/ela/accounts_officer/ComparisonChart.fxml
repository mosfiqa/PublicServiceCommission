<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ela.accounts_officer.ChartController">
    <children>
        <Label layoutX="50.0" layoutY="40.0" text="Goal 6: Comparison Charts">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>

        <TextArea fx:id="chartArea" editable="false" layoutX="50.0" layoutY="100.0" prefHeight="400.0" prefWidth="700.0">
            <font><Font name="Monospaced Regular" size="14.0" /></font>
        </TextArea>

        <Button layoutX="50.0" layoutY="520.0" onAction="#refreshChartOnAction" text="Refresh Data" />
    </children>
</AnchorPane>